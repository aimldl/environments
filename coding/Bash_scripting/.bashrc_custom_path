# To apply the changes in this .bashrc, type in:
#   $ source .bashrc

#################
#     PATH      #
#################
# Path is different from computer to computer depending on the settings.

export PATH=$PATH:$HOME/bin                             # Adding additional path

# Matlab
PATH=$PATH:/usr/local/MATLAB/R2019a/bin/

# Anaconda, added automatically
# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/aimldl/anaconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/aimldl/anaconda3/etc/profile.d/conda.sh" ]; then
        . "/home/aimldl/anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/aimldl/anaconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

# CUDA related exports
#export PATH=/usr/local/cuda-9.0/bin${PATH:+:${PATH}}
#export LD_LIBRARY_PATH=/usr/local/cuda-9.0/lib64${LD_LIBRARY_PATH:+:${LD_LIBRARY_PATH}}
export PATH=/usr/local/cuda-10.1/bin${PATH:+:${PATH}}
export LD_LIBRARY_PATH=/usr/local/cuda-10.1/lib64${LD_LIBRARY_PATH:+:${LD_LIBRARY_PATH}}

# Google Cloud Speech-to-text
#   file_name.json is a dummy name. Replace the file name to your file name!
export GOOGLE_APPLICATION_CREDENTIALS='/home/aimldl/google_cloud/private_keys/file_name.json'
